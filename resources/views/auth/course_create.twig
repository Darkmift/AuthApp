{% extends 'templates/app.twig'%}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Course creation menu
                </div>
                <div class="panel-body">
                    <form method="post" enctype="multipart/form-data" class="align-items-center" action="{{ path_for('auth.course_create') }}">
                        {# name input #}
                        <div class="form-group {{ errors.name ? ' has-error' : '' }}">
                            <label for="name">Name:</label>
                            <input id="name" name="name" class="form-control" placeholder="your name here" type="text" value="{{ old.name }}">
                            {% if errors.name %}
                                <span style="margin-left:15%;" class="help-block">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>
                        {# describe input  #}
                        <div class="form-group {{ errors.description ? ' has-error' : '' }}">
                            <label for="description">Describe course:</label>
                            <textarea class="form-control" width="50%" rows="5" id="description" name="description" value="{{ old.description ? old.description : ''  }}"></textarea>
                            {% if errors.description %}
                                <span style="margin-left:15%;" class="help-block">{{ errors.description | first }}</span>
                            {% endif %}
                        </div>
                        {# start date input #}
                        <div style="margin-left:2%;display:inline-block;width:45%;" class="form-group {{ errors.start_date ? ' has-error' : '' }}">
                            <label for="example-datetime-local-input" class="col-2 col-form-label">Start Date</label>
                            <div>
                                <input class="form-control" type="datetime-local" id="start_date" name="start_date">
                            </div>
                        </div>
                        {# end date input #}
                        <div style="margin-left:3%;display:inline-block;width:45%;" class="form-group {{ errors.end_date ? ' has-error' : '' }}">
                            <label for="example-datetime-local-input" class="col-2 col-form-label">End Date</label>
                            <div>
                                <input class="form-control" type="datetime-local" id="end_date" name="end_date">
                            </div>
                        </div>
                        {#  image input #}
                        <div class="form-group {{ errors.image ? ' has-error' : '' }}">
                            <br>
                            <div class="input-group input-file">
                                <label style="max-height:40px;" class="btn btn-default">
                                    Click to Upload Image
                                    <input style="visibility:hidden" class="form-control" type="file" hidden="hidden" name="image" id="image">
                                </label>
                            </div>
                            {% if errors.image %}
                                <span style="margin-left:15%;max-width:75%;" class="help-block">{{ errors.image | first }}</span>
                            {% endif %}
                        </div>
                        {#  #}
                        <div class="form-group text-center">
                            <br>
                            <button style="width:75%" id="singlebutton" name="singlebutton" class="btn btn-default">Add Course</button>
                        </div>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}