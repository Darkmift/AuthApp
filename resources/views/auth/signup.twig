{% extends 'templates/app.twig'%}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sign Up
                </div>
                <div class="panel-body">
                    <form method="post" class="align-items-center" action="{{ path_for('auth.signup') }}">
                        <div class="form-group text-center">
                            <div class="input-group">
                                <span class="input-group-addon form-span">name</span>
                                <input id="name" name="name" class="form-control" placeholder="your name here" type="text" >
                            </div>
                            {# <p class="help-block">help</p> #}
                        </div>
                        <div class="form-group text-center">
                            <div class="input-group">
                                <span class="input-group-addon form-span">email</span>
                                <input id="email" name="email" class="form-control" placeholder="you@example.com" type="email" >
                            </div>
                            {# <p class="help-block">help</p> #}
                        </div>
                        <div class="form-group text-center">
                            <div class="input-group">
                                <span class="input-group-addon form-span">password</span>
                                <input id="password" name="password" class="form-control" placeholder="you@example.com" type="password" >
                            </div>
                            {# <p class="help-block">help</p> #}
                        </div>
                        <div class="form-group text-center">
                            <button style="width:75%" id="singlebutton" name="singlebutton" class="btn btn-default">Sign up</button>
                        </div>
                    </form>
                    <p class="text-center">
                        <a href="#">Forgot your password?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}