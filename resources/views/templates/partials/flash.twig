{% if flash.getMessage('info') %}
    <div class="alert alert-info">
        {{ flash.getMessage('info') | first }}
    </div>
{% endif %}

{% if flash.getMessage('error') %}
    <div class="alert alert-danger">
        {{ flash.getMessage('error') | first }}
    </div>
{% endif %}

{% if flash.getMessage('success') %}
    <div class="alert alert-success">
        {{ flash.getMessage('success') | first }}
    </div>
{% endif %}

{#  #}

{# //signup error #}

{% if flash.getMessage('signupError') %}
    <div class="alert alert-danger">
        {% if errors.name %}
            -
            {{ errors.name | first }}
            <br>
        {% endif %}
        {% if errors.email %}
            -
            {{ errors.email | first }}
            <br>
        {% endif %}
        {% if errors.password %}
            -
            {{ errors.password | first }}
            <br>
        {% endif %}
        {% if errors.image %}
            -
            {{ errors.image | first }}
            and retype password
        {% endif %}
    </div>
{% endif %}

{# //signin error #}

{% if flash.getMessage('signinError') %}
    <div class="alert alert-danger">
        {% if errors.email %}
            -
            {{ errors.email | first }}
            <br>
        {% endif %}
        {% if errors.password %}
            -
            {{ errors.password | first }}

        {% endif %}
    </div>
{% endif %}

{# //password change error #}

{% if flash.getMessage('passwordChange') %}
    <div class="alert alert-danger">
        {% if errors.password_old or errors.password %}
            -one or more fields are empty,please try again
            <br>
        {% endif %}
    </div>
{% endif %}