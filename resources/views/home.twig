{% extends 'templates/app.twig'%}

{% block content %}
    <div class="row">
        <div class="col-4 col-offset-1">
            <form action="{{ path_for('home.Display') }}" method="post" id="operationBtn" style="margin-left:7vw;">
                <div class="btn-group">
                    {% if auth.role >= 2 %}
                        <button type="submit" class="btn btn-default">Admins</button>
                        <button type="submit" class="btn btn-default">Students</button>
                        <button type="submit" class="btn btn-default">Courses</button>
                        <button type="submit" class="btn btn-default">Sales</button>
                    {% elseif auth.role == "1" %}
                        <button type="submit" class="btn btn-default">Students</button>
                        <button type="submit" class="btn btn-default">Courses</button>
                    {% endif %}
                </div>
                {{ csrf.field | raw }}
            </form>
            <br>
            <br>
        </div>
    </div>
    <div class="row panel panel-default">
        <div class="panel-body row">
            <div class="col-sm-6">
                <div class="panel panel-default ">
                    <div class="panel-body">
                        {% if userList %}
                            <h4>Users:</h4>
                        {% endif %}
                        {% if courseList %}
                            <h4>Courses:</h4>
                        {% endif %}
                        <div style="border-radius:3px;border:1px solid #e5e5e5" id="userContainer" class="pre-scrollable">
                            {% if userList %}
                                {# {{dump(userList)}} #}
                                {# {{ DBController.userList |json_encode() }} #}
                                {% for users in userList %}
                                    <div style="margin-top:1rem;">
                                        <img src=" {{ base_url()}}/../public/images/users/{{ users.id }}.jpg" class="img-responsive img-thumbnail img" alt="user image">
                                        <p style="display:inline-block;">
                                            {{ users.id }}
                                            :
                                            {{users.name}}
                                        </p>
                                        <br>
                                    </div>
                                {% endfor %}
                            {% endif %}
                            {% if courseList %}
                                {% for course in courseList %}
                                    <div class="post-container panel panel-default">
                                        <div class="post-title panel-heading">{{course.id}}:{{course.name}}</div>
                                        <div class="post-title panel-body">
                                            <div class="post-thumb">
                                                <br>
                                                <img src=" {{ base_url()}}/../public/images/courses/{{ course.id }}.jpg" class="img-responsive img-thumbnail img" alt="course image"/>
                                                <br height="2vh">
                                            </div>
                                            <div class="post-content">
                                                <br height="2vh">
                                                {{course.description}}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                            <br>
                        </div>
                    </div>
                </div>
            </div>
            {# //right div #}
            <div class="col-sm-6">
                <div class="panel panel-default ">
                    <div class="panel-body panel-flexfix">
                        //user or course info
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}